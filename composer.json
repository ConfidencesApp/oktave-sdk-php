    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "vlucas/phpdotenv": "^5.0",
        "mockery/mockery": "dev-master"
    },
    "scripts": {
        "test": "php ./vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Oktave\\": "src/"
        }
    },
    "autoload-dev" : {
        "psr-4": {
            "Oktave\\SDK\\Tests\\" : "tests/"
        }
    }
